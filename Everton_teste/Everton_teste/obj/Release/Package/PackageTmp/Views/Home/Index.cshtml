@model List<Everton_teste.Models.Corrida_Grid>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Everton - Corridas Compartilhadas</h1>
</div>


<div class="row">
    <div class="col-md-2">
        <a href="/Home/Novo" id="add" name="add">Adicionar</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table>
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Motorista</th>
                    <th>Passageiro</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.Motorista</td>
                        <td>@item.Passageiro</td>
                        <td>@item.Valor</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>