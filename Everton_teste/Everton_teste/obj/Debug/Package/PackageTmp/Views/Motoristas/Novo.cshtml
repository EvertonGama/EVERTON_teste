@{
    ViewBag.Title = "Home Page";
}
<div ng-controller="NovoMotoristaController">
    <div class="jumbotron">
        <h1>Everton - Corridas Compartilhadas</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="Nome">Nome:</label>
            <input type="text" id="Nome" name="Nome" />
        </div>
        <div class="col-md-6">
            <label for="DN">Data Nascimento:</label>
            <input type="date" id="DN" name="DN" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="CPF">CPF:</label>
            <input type="text" id="CPF" name="CPF" />
        </div>
        <div class="col-md-6">
            <label for="Modelo">Modelo do carro:</label>
            <input type="text" id="Modelo" name="Modelo" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label for="Status">Status:</label>
            <select id="Status">
                <option value="1">Ativo</option>
                <option value="0">Inativo</option>
            </select>
        </div>

        <div class="col-md-6">
            <label for="Sexo">Sexo:</label>
            <select id="Sexo">
                <option value="M">Masculino</option>
                <option value="F">Feminino</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <input type="button" id="save" name="save" value="Salvar" />
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#save").on('click', function () {
        debugger;
        var obj = {
            Nome: $('#Nome').val(),
            DataNascimento: $('#DN').val(),
            CPF: $('#CPF').val(),
            Modelo: $('#Modelo').val(),
            Status: $('#Status').val(),
            Sexo: $('#Sexo').val()
        };

        $.ajax({
            url: '/Motoristas/Novo',
            type: 'POST',
            data: obj,
            success: function () {
                alert("Salvo com sucesso!");
                window.location.href = "/Motoristas/Index";
            }
        });
    })
</script>